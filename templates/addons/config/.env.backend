# =========================
# Server Configuration
# =========================
APP_NAME=MyApp
APP_ENV=development
APP_PORT=3000
APP_HOST=0.0.0.0

# =========================
# Security
# =========================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=1d
SESSION_SECRET=your_session_secret

# =========================
# Database
# =========================
DB_CLIENT=postgres         # postgres | mysql | mariadb | mongodb | sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USER=myuser
DB_PASSWORD=mypassword
DB_NAME=mydatabase
DB_SSL=false

# =========================
# Cache
# =========================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =========================
# Rate Limiting / Throttling
# =========================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# =========================
# Logging
# =========================
LOG_LEVEL=debug            # error | warn | info | debug
LOG_FORMAT=combined        # json | tiny | dev | combined

# =========================
# CORS
# =========================
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# =========================
# Mailer (Optional)
# =========================
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USER=username
MAIL_PASSWORD=password
MAIL_FROM=no-reply@example.com

# =========================
# Cloud / Storage (Optional)
# =========================
STORAGE_PROVIDER=local     # local | s3 | gcs
STORAGE_PATH=uploads
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=
STORAGE_S3_KEY=
STORAGE_S3_SECRET=
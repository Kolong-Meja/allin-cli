{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "noImplicitThis": true,
    "strictPropertyInitialization": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["jest", "node"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"],
    "esm": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/templates/**"]
}

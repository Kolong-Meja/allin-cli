{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "allowJs": true,
    "skipDefaultLibCheck": true,
    "noEmit": false,
    "rootDir": "src",
    "outDir": "./dist",
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
